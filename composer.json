{
    "name": "wp-stripe-payment/wp-stripe-payment",
    "description": "A professional WordPress plugin for accepting Stripe payments with support for URL parameters and metadata",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "wordpress",
        "plugin",
        "stripe",
        "payment",
        "ecommerce",
        "payment-gateway"
    ],
    "authors": [
        {
            "name": "AI"
        }
    ],
    "require": {
        "php": ">=8.2.18",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7"
    },
    "autoload": {
        "psr-4": {
            "WPStripePayment\\": "includes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WPStripePayment\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress includes/",
        "phpcbf": "phpcbf --standard=WordPress includes/",
        "compatibility": "phpcs --standard=PHPCompatibility --runtime-set testVersion 8.2- includes/"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "installer-name": "wp-stripe-payment",
        "plugin-name": "WP Stripe Payment",
        "plugin-uri": "https://example.com/wp-stripe-payment",
        "description": "Accept Stripe payments in WordPress with support for URL parameters and metadata",
        "version": "1.0.0",
        "author": "Your Name",
        "author-uri": "https://example.com",
        "license": "GPL-2.0-or-later",
        "license-uri": "https://www.gnu.org/licenses/gpl-2.0.html",
        "text-domain": "wp-stripe-payment",
        "domain-path": "/languages",
        "requires": {
            "wordpress": ">=6.8.2",
            "php": ">=8.2.18"
        },
        "tested": {
            "wordpress": "6.8.2"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}